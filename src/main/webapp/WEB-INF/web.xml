<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- Servlets -->

  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>controller.UserRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>controller.FileRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EventServlet</servlet-name>
    <servlet-class>controller.EventRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileDownloadServlet</servlet-name>
    <servlet-class>controller.FileDownloadRestControllerV1</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>controller.FileUploadRestControllerV1</servlet-class>
  </servlet>

  <!-- Mapping -->

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/api/v1/users/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/api/v1/files/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EventServlet</servlet-name>
    <url-pattern>/api/v1/events/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileDownloadServlet</servlet-name>
    <url-pattern>/api/v1/fileDownload/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/api/v1/fileUpload/*</url-pattern>
  </servlet-mapping>

</web-app>
